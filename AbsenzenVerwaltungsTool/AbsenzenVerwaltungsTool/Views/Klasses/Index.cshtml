@model IEnumerable<AbsenzenVerwaltungsTool.Models.Klasse>

@{
    ViewBag.Title = "Klassen";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Neue Klasse", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bezeichnung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Bezeichnung)
        </td>
        <td>
            @Html.ActionLink("Bearbeiten", "Edit", new { id=item.klasse_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.klasse_id }) |
            @Html.ActionLink("Löschen", "Delete", new { id=item.klasse_id })
        </td>
    </tr>
}

</table>
